{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom"]
  },
  "files": ["src"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
